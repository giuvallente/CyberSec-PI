{
  "manifest_version": 2,
  "name": "Detector de Rastreadores",
  "version": "1.0",
  "description": "Extensão para detectar conexões de terceiros, cookies, localStorage e fingerprinting.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "storage",
    "<all_urls>",
    "tabs",
    "activeTab"
  ],
  "background": {
    "scripts": ["blocker.js", "background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_title": "Privacidade",
    "default_popup": "popup.html"
  },
  "applications": {
    "gecko": {
      "id": "detector-rastreadores@cybersec.local",
      "strict_min_version": "57.0"
    }
  }
}
